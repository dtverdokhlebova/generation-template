mixin socials(mods)
  -
    const baseName = 'socials'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

    const socials = [
      {
        link: '#',
        icon: 'icon_dzen'
      },
      {
        link: '#',
        icon: 'icon_tg'
      },
      {
        link: '#',
        icon: 'icon_vk'
      },
      {
        link: '#',
        icon: 'icon_yt'
      }
    ]

  .socials(class=allMods)&attributes(attributes)
    each item in socials
      a.socials__item(href=item.link)
        +svg(item.icon)
    block
