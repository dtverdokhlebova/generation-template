mixin services-adt(items, mods)
  -
    const baseName = 'services-adt'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .services-adt(class=allMods)&attributes(attributes)
    each item, index in items
      .services-adt__item(class=(item.hidden ? 'block-none block-none--all' : '') data-hidden=(item.hidden ? 'true' : 'false'))
        +ui-h4(`0${index+1}`, '--bold', 'div').services-adt__count
        +ui-p1(item.title, 'services-adt, --t-h4')
        +ui-h4(item.price, 'services-adt, --bold', 'div').text-nowrap

    block
