extends ../../layouts/layout

block variables
  -
    const pageName = 'seo'
    const pageTitle = 'Seo'

  -
    const ServicesAdtItems =[
      { title: 'Поддержка сайта', price: 'от 2 500 руб/ч.' },
      { title: 'Копирайтинг ', price: 'от 500 руб/ч. ' },
      { title: 'Статейное продвижение', price: 'от 2 500 руб' },
      { title: 'item hidden', price: 'от 2 500 руб', hidden: true },
      { title: 'item hidden', price: 'от 2 500 руб', hidden: true },
    ]

  -
    const switchTariffsData = {
      buttonOnclick: 'uiSwitchButton(this)',
      groupName: 'tarifs_seo_price',
      left: {
        id: 'tarifs_seo_price_1',
        text: 'Регионы',
        attributeName: 'data-switch-target',
        attributeValue: 'tarifs_seo_price_1',
      },
      right: {
        id: 'tarifs_seo_price_2',
        text: 'Москва, Санкт-Петербург',
        attributeName: 'data-switch-target',
        attributeValue: 'tarifs_seo_price_2',
      },
    }

  -
    const tariffsData ={
      items: [
        { title: 'Тариф “Базовый”',
          price: 'от 19 500 ₽',
          button: 'Оставить заявку',
          descr: `Специально разработанный тариф для молодых сайтов или тех, кто хочет попробовать SEO продвижение.
            <br>А&nbsp;так&nbsp;же подойдет тем, у&nbsp;кого ограничен бюджет.`,
        },
        { title: 'Тариф “Расширенный”',
          price: 'от 45 500 ₽',
          button: 'Оставить заявку',
          descr: `В&nbsp;тариф включен максимальный комплекс работ, который необходим
            для&nbsp;полноценного продвижения в&nbsp;поисковых системах с&nbsp;доработками
            вашего сайта, направленными на&nbsp;достижения поставленных целей`,
        },
      ]
    }

block content
  main.main
    +section
      .inner
        +banner
    +section('--bg, --mt0')
      +section
        .inner
          +comprehensive-work
      +section
        .inner
          +section-head('--with-switch')
            +section-head
              +ui-h2('Наши тарифы', 'section-head, --bold')
              +ui-p1('Выберите для себя удобный тариф исходя из ваших целей', 'section-head, --medium').text-grey
            +ui-switch(switchTariffsData)
          +tariffs(tariffsData, switchTariffsData)
      +section
        .inner
          +section('--grid')
            +section-head('section')
              +ui-h2('Дополнительные услуги', 'section-head, --bold')
            +section-main('section')
              +services-adt(ServicesAdtItems)#services-adt
            +ui-button('Смотреть все', 'section, --outline, --min-w, --px-xl')(onclick="toggleHidden(this, '#services-adt')" data-text-start='Смотреть все' data-text-end='Свернуть')
    +section('--ov-hidden')
      .inner
        +section-head('--t-flex, , --w-items-l')
          +ui-h2('Наша команда', 'section-head, --bold')
          +ui-p1('В нашей команде работают настоящие профи с&nbsp;креативным подходом и&nbsp;богатым багажом знаний!', 'section-head, --medium').text-body
        +team
    +section
      .inner
        +section-head
          +ui-h2('О компании', '--bold')
        +about-nums
    +section
      .inner
        +section-head
          +ui-h2('Сертифицированные  <br>специалисты', '--bold')
        +certified
    +section('--bg')
      +section
        .inner
          +section-head('--t-flex, --bb')
            +ui-h2('Этапы запуска вашего проекта', 'section-head, --bold')
            +ui-p1('Каждый проект индивидуален, именно поэтому на&nbsp;каждом этапе мы учитываем все нюансы и&nbsp;ваши пожелания!', 'section-head, --medium').text-grey
          +stages
      +section('--ov-hidden')
        +section
          .inner
            +section-head('--t-flex').text-center.text-center--t-left
              +ui-h2('Наши клиенты', 'section-head, --bold')
              +ui-p1('Мы работаем с&nbsp;крупными компаниями по&nbsp;всей России и&nbsp;за&nbsp;ее пределами', 'section-head, --medium').text-grey
            +clients#clients
            +section('--mt-xxxs', 'div').block-none.block-none--mobile.text-center
              +ui-button('Смотреть все', '--outline, --w100, --min-w, --px-xl')(onclick=`toggleHidden(this, '#clients')` data-text-start='Смотреть все' data-text-end='Свернуть')
        +section
          +many-clients
        +section#section-form
          .inner
            +connection
    +popup#popup-thx
      +form-thx
